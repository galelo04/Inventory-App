<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%=title%></title>
  </head>
  <body>
    <h1><%=title%></h1>
    <a href="/items">all items</a>
    <div>
      <div class="title">Item Title: <%=item.ititle%></div>
      <div class="price">Item price: <%=item.price%></div>
      <div class="quantity">Item quantity: <%=item.quantity%></div>
      <div class="categories">
        Categories:
        <ul>
          <% item.categories.forEach((category) => { %>
          <li>
            <a href="/categories/<%= category.cid%>/get"
              ><%= category.ctitle %></a
            >
          </li>
          <% }); %>
        </ul>
      </div>

      <a href="/items/<%= item.iid %>/update">update</a>
    </div>
    <form
      action="/items/<%= item.iid %>/delete"
      method="POST"
      style="display: inline"
    >
      <button
        type="submit"
        onclick="return confirm('Are you sure you want to delete this item?');"
      >
        Delete
      </button>
    </form>
  </body>
</html>
